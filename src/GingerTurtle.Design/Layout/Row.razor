
<div class="row-wrap @(IsHeader ? "header" : "") @Type.GetRowCss()">
    <div class="row">
        @ChildContent
    </div>
</div>

@code {
    
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    
    [Parameter]
    public bool IsHeader { get; set; }
    
    [Parameter]
    public RowType Type { get; set; }
    
}