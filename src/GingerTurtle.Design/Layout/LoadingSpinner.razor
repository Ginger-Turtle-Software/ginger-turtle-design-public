<div class="spinner-wrapper">
    <div class="spinner @SpinnerSize.GetCssClass()"></div>
</div>
@if (!string.IsNullOrEmpty(LoadingText))
{
    <p class="@TextSize.GetCssClass()">
        @LoadingText
    </p>
}

@code {

    [Parameter]
    public string LoadingText { get; set; }

    [Parameter]
    public ElementSize TextSize { get; set; } = ElementSize.Large;

    [Parameter]
    public ElementSize SpinnerSize { get; set; } = ElementSize.Large;

}